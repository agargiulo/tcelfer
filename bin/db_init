require 'sequel'

require 'tcelfer/config'

config = Tcelfer::Config.new
db = Sequel.connect("sqlite://#{config.sqlite_path}")

## DAYS ##
db.drop_table? :days
db.create_table :days do
  primary_key :id
  Date :date, index: { unique: true }, null: false
  String :rating, null: false
  String :notes
end
